{
  "name": "clippy",
  "version": "1.3.0",
  "main": "index.js",
  "description": "Clipboard History",
  "repository": "https://github.com/ikouchiha47/clippy",
  "author": {
    "name": "ikouchiha47"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build",
    "release": "build"
  },
  "build": {
    "appId": "com.clippy.app",
    "win": {
      "icon": "clipboard.png",
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": false
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "target": "dmg",
      "publish": [
        "github"
      ]
    }
  },
  "devDependencies": {
    "electron": "^2.0.3",
    "electron-builder": "^20.17.0",
    "electron-packager": "^12.1.0"
  }
}
